<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <link rel="stylesheet" href="/stylesheets/profileStyle.css" />
  </head>
  <body>
    <div class="name">
      <img class="pfp"
      src="/uploads/<%= user.pfp %>"
      alt="Profile Picture"
      style="width: 100px "
      />
    <h2><%= user.username %>'s Profile</h2>
  </div>
    <br />
    <br />
    <div  id="editButton">
      <a href="/user/<%= user.id %>/edit">
        <button >Edit profile</button>
      </a>
    </div>

    <% if(user.role ==='teacher') { %>
    <a href="/teacher"
      ><%=students.length%> <%if(students.length !==1) {%> students <%} else {%>
      student <% } %>
    </a>
    <% } %>
    <h3>Posts</h3>

    <div class="grid">

      <% user.posts.forEach((post) => { %>
      <a href="/posts/<%= post._id%>">
        <img class="post"
          src="<%= post.image.replace(/^public/, '') %>"
          alt="Post Image"
          
          />
          <p><%= post.quote%></p>
      </a>
      <% }) %>
      </div>
  </body>
  <%- include('../partials/nav.ejs') %>
</html>